# Environment Variables - NEVER COMMIT THIS FILE WITH ACTUAL VALUES
# Copy this to .env and fill in your actual secrets

# ============================================
# API Keys and Authentication
# ============================================

# US Census Bureau API
CENSUS_API_KEY=your_census_api_key_here
CENSUS_API_URL=https://api.census.gov/data

# USGS GNIS API
GNIS_API_KEY=your_gnis_api_key_here
GNIS_API_URL=https://geonames.usgs.gov/apex/f

# OpenStreetMap API
OSM_API_KEY=your_osm_api_key_here
OSM_API_URL=https://api.openstreetmap.org

# Google Places API (if used)
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# ============================================
# Truth Governor
# ============================================

TRUTH_GOVERNOR_SECRET=your_truth_governor_secret_key_here
TRUTH_GOVERNOR_ENABLED=true

# ============================================
# Multi-Cloud Deployment Credentials
# ============================================

# Azure
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_RESOURCE_GROUP=gnis-enterprise-rg
AZURE_STATIC_WEB_APP_NAME=gnis-enterprise

# Google Cloud Platform
GCP_PROJECT_ID=your_gcp_project_id
GCP_SERVICE_ACCOUNT_KEY=path/to/service-account-key.json
GCP_REGION=us-central1
GCP_BUCKET_NAME=gnis-enterprise-storage

# AWS (if used as fallback)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=gnis-enterprise-backup

# ============================================
# Pipeline Configuration
# ============================================

INGESTION_BATCH_SIZE=1000
INGESTION_CONCURRENCY=10
VALIDATION_TIMEOUT=30
MAX_RETRY_ATTEMPTS=3

# Quality Thresholds (0.0 to 1.0)
MIN_COMPLETENESS=0.90
MIN_ACCURACY=0.90
MIN_CONSISTENCY=0.90

# ============================================
# Database Configuration
# ============================================

DATABASE_URL=postgresql://user:password@localhost:5432/gnis_enterprise
DATABASE_POOL_SIZE=20
DATABASE_SSL=true

# ============================================
# Monitoring and Observability
# ============================================

METRICS_ENDPOINT=https://metrics.internal/ingest
ALERT_WEBHOOK=https://alerts.internal/webhook
LOG_LEVEL=info
ENABLE_AUDIT_LOGGING=true

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=production

# ============================================
# Security Settings
# ============================================

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=1800

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://gnis.enterprise.gov,https://admin.gnis.enterprise.gov

# ============================================
# Feature Flags
# ============================================

ENABLE_REAL_TIME_INGESTION=true
ENABLE_BATCH_INGESTION=true
ENABLE_PUBLIC_DASHBOARD=true
ENABLE_ADMIN_DASHBOARD=true

# ============================================
# Development Settings
# ============================================

NODE_ENV=development
PORT=3000
HOST=localhost

# Debug Mode
DEBUG=false
VERBOSE_LOGGING=false
